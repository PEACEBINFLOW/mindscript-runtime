# 2.1-config.example.yaml
# Example configuration file for mindscript-runtime

default_model: openai:gpt-4.1

models:
  openai:gpt-4.1:
    provider: openai
    model_name: gpt-4.1
    api_key_env: OPENAI_API_KEY

  gemini:pro:
    provider: gemini
    model_name: gemini-3.0-pro
    api_key_env: GEMINI_API_KEY

  local:stub:
    provider: local_stub
    model_name: debug-model
    api_key_env: null

runtime:
  max_tokens: 2048
  temperature: 0.3
  verbose: true
